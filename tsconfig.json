{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "moduleResolution": "node"
  },
  "include": ["./client/", "./server/", "./__tests__", "types"],
  "exclude": ["./__mocks__", "./dist", "./__tests__/**/*.js"]
}
